<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AutoDesktopApplication"
             xmlns:converters="clr-namespace:AutoDesktopApplication.Converters"
             x:Class="AutoDesktopApplication.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Value Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:BoolToStatusConverter x:Key="BoolToStatusConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />

            <!-- Custom Colors -->
            <Color x:Key="Primary">#512BD4</Color>
            <Color x:Key="Secondary">#DFD8F7</Color>
            <Color x:Key="Tertiary">#2B0B98</Color>
            <Color x:Key="Border">#CCCCCC</Color>
            <Color x:Key="Surface">#F9F9F9</Color>
            <Color x:Key="Error">#FF3333</Color>
            <Color x:Key="Success">#4CAF50</Color>
            <Color x:Key="Warning">#FFC107</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>